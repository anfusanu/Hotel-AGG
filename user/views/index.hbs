  <script>
    function showPosition() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(function (position) {
          window.location.href =
            `/app/search?geolocation=true&latitude=${position.coords.latitude}&longitude=${position.coords.longitude}&radius=30000&page=1`;
        });
      } else {
        alert("Sorry, your browser does not support HTML5 geolocation.");
      }
    }

    document.getElementById('searchHotelForm').addEventListener('submit', (event) => {
      event.preventDefault();

      let searchKeyword = document.getElementById('searchKeyword').value;

      let dates = (document.getElementById('dates').value).split(" > ");

      let serviceType = document.getElementById('serviceType').value;
      let guestQty = document.getElementById('guestQty').value;

      let urlParams =
        `?searchKeyword=${searchKeyword}&dateFrom=${dates[0]}&dateTo=${dates[1]}&serviceType=${serviceType}&guestQty=${guestQty}&page=1`;
      window.location.href = `/app/search${urlParams}`
    })
  </script>



  <script src="https://unpkg.com/@trevoreyre/autocomplete-js"></script>
  <script>
    new Autocomplete('#autocomplete', {

      // /:searchKeyword
      search: input => {
        const url = `/app/autocomplete-search/${encodeURI(input)}`

        return new Promise(resolve => {
          if (input.length < 3) {
            return resolve([])
          }
 
          fetch(url)
            .then(response => response.json())
            .then(data => {
              resolve(data)
            })
        })
      },

      getResultValue: result => result.portalTag,

      onSubmit: result => {
        window.location.href = `/app/hotel-detail?hotelId=${encodeURI(result._id)}`
      }
    })
  </script>


