{{#if serviceStatus.roomService}}
<section class="section">
  <div class="row card p-4">
    <div class="card-header text-center">
      <h4 class="card-title">Rooms Service</h4>
      <p class="text-center">Manage your rooms here</p>
    </div>
    <div class="col-12 col-md-8 offset-md-2">
      <div class="pricing">
        <div class="row align-items-center justify-content-center">

          {{#each serviceList.roomServices}}

          <div class="col-md-4">
            <div class="card">
              <div class="card-header text-center justify-content-center">
                <h4 class="card-title">{{this.roomTitle}}</h4>
                <!-- <p class="text-center">A standard features you can get</p> -->
              </div>
              <h1 class="price">RS.{{this.roomPrice}}</h1>
              <div class="row px-4 py-2 justify-content-center">
                <table>


                  <tr>
                    <td class="px-2">Feature</td>
                    <td> {{this.roomFeatureType}}</td>
                  </tr>
                  <tr>
                    <td class="px-2">Privacy</td>
                    <td> {{this.roomPrivacyType}}</td>
                  </tr>

                </table>
              </div>

              <div class="card-footer">
                <button class="btn btn-primary btn-block"
                  onclick="window.location.href = '/portal/service-mgt/edit-room/{{this._id}}'">Edit</button>
              </div>
            </div>
          </div>
          {{/each}}

          {{! Add new room card }}
          <div class="col-md-4" style="cursor: pointer;">
            <div class="card" style="outline: 2px dashed rgb(0, 0, 0); outline-offset: -10px;">
              <div class="card-header text-center">
                <h4 class="card-title">Add room</h4>
                <p class="text-center">Add new room to your portal </p>
              </div>
              <h1 class="price"><i class="bi bi-plus-square-dotted" data-bs-toggle="modal"
                  data-bs-target="#roomModal"></i></h1>

              <div class="card-footer border-0">
                <button class="btn btn-primary btn-block fw-bold" data-bs-toggle="modal"
                  data-bs-target="#roomModal">ADD</button>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

</section>
{{/if}}



