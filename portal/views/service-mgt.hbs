<!--  MODAL of Event Registration -->
<div class="modal fade text-left" id="eventModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel33"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel33">
          ADD EVENT
        </h4>
        <p>This is only for your request purpose.</p>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <i data-feather="x"></i>
        </button>
      </div>
      <form id="addEvent" method="POST" action="/portal/service-mgt/add-event" enctype="multipart/form-data">

        <div class="modal-body">
          <label>Title: </label>
          <div class="form-group">
            <input type="text" placeholder="Event name" class="form-control" id="eventTitle" name="eventTitle"
              required />
          </div>
          <!-- Image upload  -->

          <label>Main Image: </label>
          <div class="form-group">
            <input class="form-control" type="file" required name="mainImage" id="mainImage" accept="image/*" />
          </div>
          <label>Overview: </label>
          <div class="form-group">
            <input class="form-control" type="file" required name="overviewImage" id="overviewImage" accept="image/*" />
          </div>
          <label>One more shot: </label>
          <div class="form-group">
            <input class="form-control" type="file" required name="extraImage" id="extraImage" accept="image/*" />
          </div>


          <label>Type: </label>
          <div class="form-group">
            <select class="form-select" id="eventFeatureType" name="eventFeatureType" required>
              <option value="">
                --Select your event type--
              </option>
              <option value="AC">
                AC
              </option>
              <option value="Non-AC">
                Non-AC
              </option>
              <option value="Wild">
                Wild
              </option>
              <option value="Unique">
                Unique
              </option>
            </select>
          </div>

          <label>Price: </label>
          <div class="form-group">
            <input type="number" placeholder="Price of event" class="form-control" id="eventPrice" name="eventPrice"
              required />
          </div>

          <label>Max No of Guest: </label>
          <div class="form-group">
            <input type="number" placeholder="Don't cram your guests" class="form-control" id="maxOccupancy"
              name="maxOccupancy" required />
          </div>

          <label>Price for extra bed: </label>
          <div class="form-group">
            <input type="number" placeholder="Extra bed price" class="form-control" id="extraBed" name="extraBed"
              required />
          </div>

          <label>How many such event halls you provide: </label>
          <div class="form-group">
            <input type="number" placeholder="Quantity" class="form-control" id="eventQty" name="eventQty" required />
          </div>
          <label>Description: </label>
          <div class="form-group">
            <textarea name="eventDescription" id="eventDescription" rows="5" style="resize: none; width: 100%;"
              required></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-light-secondary" data-bs-dismiss="modal">
            <i class="bx bx-x d-block d-sm-none"></i>
            <span class="d-none d-sm-block">Close</span>
          </button>
          <button type="submit" class="btn btn-primary ml-1">
            <i class="bx bx-check d-block d-sm-none"></i>
            <span class="d-none d-sm-block">ADD</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

