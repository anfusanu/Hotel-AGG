</script>



<script>
    $(document).ready(function () {
        $("#numberOfRooms").on("change", function () {
            var numInputs = $(this).val();
            $('#roomTypeSection').html('');
            for (var i = 0; i < numInputs; i++) {
                var j = i * 1;
                var $section = $(
                    `
                    <div class="row">
                        <div class="col-4 col-md-4">
                            <div class="form-group">
                                <label for="roomType${j}">
                                    Room Name
                                </label>
                                <input value="" type="text" class="form-control" name="roomName${j}"
                                    id="roomName${j}" placeholder="Enter the room title" />
                            </div>
                        </div>

                        <div class="col-4 col-md-4">
                            <div class="form-group">
                                <label for="roomType${j}">
                                    Room Name
                                </label>
                                <input value="" type="text" class="form-control" name="roomName${j}"
                                    id="roomName${j}" placeholder="Enter the room title" />
                            </div>
                        </div>

                        <div class="col-4 col-md-4">
                            <div class="form-group">
                                <label for="roomType${j}">
                                    Room Name
                                </label>
                                <input value="" type="text" class="form-control" name="roomName${j}"
                                    id="roomName${j}" placeholder="Enter the room title" />
                            </div>
                        </div>
                    </div>
                    `
                );
                $('#roomTypeSection').append($section);
            }
        });
    });
</script>