<div
  class="modal fade text-left"
  id="editModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="myModalLabel33"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel33">
          ADD ROOM
        </h4>
        {{! <p>This is only for your request purpose.</p> }}
        <button
          type="button"
          class="close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <i data-feather="x"></i>
        </button>
      </div>
      <form
        id="addRoom"
        method="POST"
        action="/portal/service-mgt/set-room-update/{{roomDetails._id}}"
      >

        <div class="modal-body">
          <label>Room Number to change: </label>
          <div class="form-group">
            <input
              type="text"
              placeholder="Room name"
              class="form-control"
              id="roomNumber"
              name="roomNumber"
              required
            />
          </div>

           <label>New room number: </label>
          <div class="form-group">
            <input
              type="text"
              placeholder="Room name"
              class="form-control"
              id="roomNumber"
              name="newRoomNumber"
              required
            />
          </div>

      
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-light-secondary"
            data-bs-dismiss="modal"
          >
            <i class="bx bx-x d-block d-sm-none"></i>
            <span class="d-none d-sm-block">Close</span>
          </button>
          <button type="submit" class="btn btn-primary ml-1">
            <i class="bx bx-check d-block d-sm-none"></i>
            <span class="d-none d-sm-block">ADD</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<input type="hidden" id="roomId" value="{{roomDetails._id}}">
<script>
  function bookRoom(roomNumber){
    const roomId = document.getElementById('roomId').value;
    window.location.href = `/reception/offline-rooms-booking?roomId=${roomId}&roomNumber=${roomNumber}`
  }

  function bookedInfo(roomNumber){

    const roomId = document.getElementById('roomId').value;

    window.location.href = `/reception/offline-rooms-status?roomId=${roomId}&roomNumber=${roomNumber}`

  }
</script>