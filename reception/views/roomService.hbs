<style>
  .service-select {
    cursor: pointer;
    transition: 300ms;
  }

  .service-select:hover .service-text {
    color: white;
  }
 

  .service-select:hover {
    background-color: #435ebe;
  }

  .service-active {
    cursor: pointer;
    background-color: #435ebe;
  }
  .service-text-active{
    color: white;
  }
</style>

{{!-- <div class="page-heading">
  <h3>Profile Statistics</h3>
</div> --}}
<div class="page-content">
  <section class="row">
    <div class="col-12 col-lg-12">

      <div class="row">
        {{#if roomServices}}
        <div class="col-6 col-lg-2 col-md-2">
          <div class="card service-active" onclick="window.location.href = '#'">
            <div class="card-body">
              <div class="row text-center">
                  <h4 class="font-extrabold mb-0 service-text-active">Room service</h4>
              </div>
            </div>
          </div>
        </div>
        {{/if}}

        {{#if eventServices}}
        <div class="col-6 col-lg-3 col-md-6">
          <div class="card">
            <div class="card-body px-3 py-4-5">
              <div class="row text-center">
                  <h4 class="font-extrabold mb-0">Event service</h4>
              </div>
            </div>
          </div>
        </div>
        {{/if}}

        {{#if foodServices}}
        <div class="col-6 col-lg-3 col-md-6">
          <div class="card">
            <div class="card-body px-3 py-4-5">
              <div class="row text-center">
                  <h4 class="font-extrabold mb-0">Room service</h4>
              </div>
            </div>
          </div>
        </div>
        {{/if}}

      </div>

      <div class="row">
        <div class="card">
          <div class="card-body">

            <div class="row">
              <button class="btn btn-success my-4 py-2 fw-bold" onclick="window.location.href = '/reception/reserve-offline'">Reserve a room</button>


        {{#each roomServices}}
        <div class="col-6 col-lg-4 col-md-6">

          <div class="card shadow-lg">

            <img src="{{this.roomImages.[0]}}" alt="" class="card-img-top" />

            <div class="card-header text-center justify-content-center">
              
              <h4 class="card-title">{{this.roomTitle}}</h4>
              <!-- <p class="text-center">A standart features you can get</p> -->
            </div>
            <h1 class="price text-center">RS.{{this.roomPrice}}</h1>
            <div class="card-footer">
              <button class="btn btn-primary btn-block"
                onclick="window.location.href = '/reception/offline-rooms/{{this._id}}'">View Rooms</button>
            </div>
          </div>
        </div>

        {{/each}}
            </div>

          </div>

        </div>

      </div>

    </div>
    
  </section>
</div>