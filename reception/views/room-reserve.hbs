<div class="page-heading">
  <h3>Reserve a Service</h3>
</div>
<section class="section">
  <div class="row card p-4">
    <div class="card-header text-center">
      <h4 class="card-title">Rooms Service</h4>
    </div>
    <div class="col-12 col-md-8 offset-md-2">
      <div class="pricing">
        <div class="row align-items-center justify-content-center">

          <form id="addRoom" method="POST">
            <div class="row">
              <label>Name of Guest: </label>
              <div class="form-group">
                <input type="text" placeholder="Guest Name" class="form-control" id="guestName" name="guestName"
                  required />
              </div>
               <label>Phone Number: </label>
              <div class="form-group">
                <input type="number" placeholder="Phone Number" class="form-control" id="guestPhone" name="guestPhone" 
                maxlength="10"  oninput="this.value=this.value.replace(/[^0-9]|^ /g,'')"
                 required />
              </div>
               <label>Email: </label>
              <div class="form-group">
                <input type="email" placeholder="Email address" class="form-control" id="guestEmail" name="guestEmail"
                  required />
              </div>

               <label>No of Guests: </label>
              <div class="form-group">
                <input type="number" value="1" class="form-control" id="guestQty" name="guestQty"
                  required />
              </div>

                <label>Purpose: </label>
              <div class="form-group">
                <input type="text" placeholder="Purpose of the visit" class="form-control" id="purpose" name="purpose"
                  required />
              </div>
          

         

              <label>Room: </label>
              <div class="form-group">
                <select class="form-select" id="roomId" name="roomId" required>
                  {{#each roomServices}}
                  <option value="{{this._id}}">
                    {{this.roomTitle}}
                  </option>
                 {{/each}}
                </select>
              </div>
              

               <label>Check In </label>
              <div class="form-group">
                <input type="date" class="form-control" id="dateFrom"
                  name="dateFrom" required />
              </div> <label>Check Out </label>
              <div class="form-group">
                <input type="date" class="form-control" id="dateTo"
                  name="dateTo" required />
              </div>
             
            </div>
            <div class="modal-footer">

              <button type="submit" class="btn btn-primary ml-1">
                <i class="bx bx-check d-block d-sm-none"></i>
                <span class="d-none d-sm-block">Reserve</span>
              </button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>

</section>

<script>
  document.getElementById('dateTo').min = new Date().toISOString().split("T")[0];
  document.getElementById('dateFrom').min = new Date().toISOString().split("T")[0];

</script>