<div class="page-heading">
  <h3>Room and Guest details</h3>
</div>
<section class="section">
  <div class="row card p-4">
    <div class="card-header text-center">
      <h2 class="card-title">{{roomOffline.roomNumber}}</h2>
    </div>
    <div class="col-12 col-md-8 offset-md-2">
      <div class="pricing">
        <div class="row align-items-center justify-content-center">

          <form id="addRoom" method="POST">
            <div class="row">
              <label>Name of Guest: </label>
              <div class="form-group">
                <input type="text" placeholder="Guest Name" class="form-control" id="guestName" name="guestName" value="{{orderDetails.guestInfo.guestName}}"
                  readonly />
              </div>
               <label>Phone Number: </label>
              <div class="form-group">
                <input type="number" placeholder="Phone Number" class="form-control" id="guestPhone" name="guestPhone" value="{{orderDetails.guestInfo.guestPhone}}"
                 readonly />
              </div>
               <label>Email: </label>
              <div class="form-group">
                <input type="email" placeholder="Email address" class="form-control" id="guestEmail" name="guestEmail" value="{{orderDetails.guestInfo.guestEmail}}"
                  readonly />
              </div>

               <label>No of Guests: </label>
              <div class="form-group">
                <input type="number" value="1" class="form-control" id="guestQty" name="guestQty" value="{{orderDetails.guestInfo.guestQty}}"
                  readonly />
              </div>

              <label>Purpose: </label>
              <div class="form-group">
                <input type="text" placeholder="Purpose of the visit" class="form-control" id="purpose" name="purpose" value="{{orderDetails.guestInfo.purpose}}"
                  readonly />
              </div>

              
               <label>Check In </label>
              <div class="form-group">
                <input type="date" class="form-control" id="dateFrom"
                  name="dateFrom" readonly  value="{{orderDetails.dateCheckIn}}"/>
              </div> <label>Check Out </label>
              <div class="form-group">
                <input type="date" class="form-control" id="dateTo" value="{{orderDetails.dateCheckIn}}"
                  name="dateTo" readonly />
              </div>
             
            </div>
            <div class="modal-footer">

              <button type="submit" class="btn btn-primary ml-1">
                <span class="d-none d-sm-block">CHECKOUT</span>
              </button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>

</section>

<script>
  document.getElementById('dateTo').value = new Date('{{orderDetails.dateCheckIn}}').toISOString().split("T")[0];
  document.getElementById('dateFrom').value = new Date('{{orderDetails.dateCheckOut}}').toISOString().split("T")[0];
</script>